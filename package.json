{
	"name": "craftdotui",
	"version": "0.1.0",
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"license": "MIT",
	"private": true,
	"scripts": {
		"dev": "cd apps/web && bun run dev",
		"build": "cd apps/web && bun run build",
		"start": "cd apps/web && bun run start",
		"lint": "bunx biome lint --write",
		"format": "bunx biome format --write",
		"check": "bunx biome check --write",
		"build:registry": "tsx ./scripts/build-registry.mts && bun format"
	},
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
